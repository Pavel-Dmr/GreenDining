<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ecom4.green.imgur.dao.ImgurDAO">

    <insert id="InsertImageList">
        <foreach item="imageURL" collection="list" separator="">
            <choose>
                <when test="saleID != 0">
                    insert into image (id,path,sale_id)
                    values (auto_image.NEXTVAL,#{imageURL},#{saleID})
                </when>
                <otherwise>
                    insert into image (id,path)
                    values (auto_image.NEXTVAL,#{imageURL})
                </otherwise>
            </choose>
        </foreach>
    </insert>

</mapper>